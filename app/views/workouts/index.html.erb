<%= turbo_page_requires_reload %>
<%= render partial: "helper_javascript" %>
<section class="hero">
  <div class="hero-body">
    <h1 class="title">Welcome to your fitness dashboard, <span class="has-text-primary"><%= @user.name.split(" ")[0] %>!</span></h1>
  </div>
</section>
<div class="section">
  <span class="is-size-4">Progress:</span>
  <progress class="progress is-primary" value="0" max="100"></progress>
  <span class="is-size-4">Total: <span class="has-text-primary has-text-weight-bold"><%= @user.workouts.count %> workouts</span>.</span>
  <br>
  <span class="is-size-4">Current streak: <span class="has-text-weight-bold has-text-warning"><%= @user.workout_streak %> days</span>.</span>
  <br>
</div>
<div class="section">
  <div class="columns">
    <!--<div class="column is-one-third"></div> -->
    <div class="column is-one-half">
      <div class="box">
        <h2 class="barlow-condensed-bold is-size-3">Current Reps:</h2>
        <div class="is-flex is-flex-direction-column">
          <span>Dumbbell Bench: 65</span>
          <span>Deadlift: 265</span>
          <span>Squat: 145</span>
        </div>
      </div>
    </div>
    <div class="column is-one-half">
      <div class="box">
        <!-- We can come back to this -->
        <h2 class="is-size-3 barlow-condensed-bold">Last workout:</h2>
        <div class="is-flex is-flex-direction-column">
            <span>Date: <%= @workout.created_at.strftime("%m/%d/%Y") %></span>
            <span>Type: <%= @workout.workout_type.humanize %></span>
            <% @workout.gym_lifts.each do |gym_lift| %>
              <span>Lift: <%= gym_lift.exercise.title %></span>
              <span>Weight: <%= gym_lift.weight %></span>
              <span>Reps: <%= gym_lift.reps %></span>
              <span>Sets: <%= gym_lift.sets %></span>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="section">
  <%= link_to "Add a workout", new_workout_path, class: "button is-primary" %>
  <%#= link_to "Log Food", "#", class: "button is-light" %>
</div>