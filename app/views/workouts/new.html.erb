<section class="hero">
  <div class="hero-body">
    <h1 class="title has-text-primary">Let's add a workout</h1>
    <h2 class="subtitle has-text-warning">To proceed, fill out the form below</h2>
  </div>
</section>

<section class="section">
  <%= turbo_frame_tag "gym_lift" do %>
    <%= form_with model: @workout do |f| %>
      <div class="columns is-vcentered">
        <div class="column is-one-fifth is-flex">
          <%= f.label "Date:", class: "label my-auto" %>
          <div class="select my-auto ml-2">
            <%= f.select :date, options_from_collection_for_select(@last_two_weeks, :to_s, :to_s) %>
          </div>
        </div>
        <div class="column is-one-fifth is-flex">
          <%= f.label "Type:", class: "label my-auto" %>
          <div class="select my-auto ml-2">
            <%= f.select :workout_type, options_for_select(@workout_types.map{ |k, v| [k.capitalize, v]}) %>
          </div>
        </div>
        <div class="column is-flex">
          <%= button_tag "Add Lift", formaction: add_lift_form_workouts_path, formmethod: :post, data: { turbo_stream: true }, class: "button is-warning my-auto ml-auto" %>
          <%= f.submit "Continue", class: "button is-primary ml-2" %>
        </div>
      </div>

      <div class="field">
        <%= turbo_frame_tag "add_lift_form" do %>
          <%= render partial: "add_lift_form" %>
        <% end %>
      </div>



      <%#= turbo_frame_tag "workout_lift_form_frame" do %>

      <%# end %>
    <% end %>
  <% end %>
</section>