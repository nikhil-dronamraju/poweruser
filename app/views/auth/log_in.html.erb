<%= turbo_page_requires_reload %>
<div class="section">
  <div class="columns">
    <div class="column is-one-quarter"></div>
    <div class="column is-half">
      <h2 class="is-size-2 title">Log in</h2>
      <%= form_with model: @user, class: "form" do |form| %>
        <div class="field">
          <%= form.label :username %>
          <%= form.text_field :username, class: "input" %>
        </div>

        <div class="field">
          <%= form.label :password %>
          <%= form.password_field :password, class: "input" %>
        </div>

        <div class="field">
          <div class="buttons">
            <%= form.submit "Log in", class: "button is-primary" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="column is-one-quarter"></div>
  </div>
</div>