<div data-controller="modals" id="<%= dom_id(smart_goal) %>" class="modal">
  <div data-action="click->modals#close_modal" class="modal-background"></div>
  <div class="modal-content" style="overflow: visible;">
    <div class="box animate__animated animate__fadeIn">
      <div class="is-flex is-flex-direction-column">
        <%= form_with model: smart_goal do |f| %>
          <div class="field">
            <%= f.label :title, class: "label" %>
            <%= f.text_field :measurable_goal, class: "input" %>
          </div>

          <div class="is-flex">
            <div class="field">
              <%= f.label :start_date, class: "label" %>
              <%= f.date_field :start_date, class: "input", value: Date.today %>
            </div>
            <div class="field ml-2">
              <%= f.label :end_date, class: "label" %>
              <%= f.date_field :end_date, class: "input", value: Date.today %>
            </div>
          </div>

          <div class="field">
            <%= f.label :track, class: "label" %>
            <div class="select">
              <%= f.select :track_id, options_from_collection_for_select(user.tracks, :id, :title) %>
            </div>
          </div>

          <div class="field">
            <%= f.label :saga, class: "label" %>
            <div class="select">
              <%= f.select :saga_id, options_from_collection_for_select(user.sagas, :id, :title, user.sagas.last.id) %>
            </div>
          </div>

          <div class="buttons">
            <% if !smart_goal&.id %>
              <%= f.submit "Save", class: "button is-primary montserrat-500" %>
            <% else %>
              <%= f.submit "Update", class: "button is-primary montserrat-500" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <button data-action="modals#close_modal" type=button class="modal-close is-large" aria-label="close"></button>
</div>