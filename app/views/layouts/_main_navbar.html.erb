<% if %w(dashboard tracks smart_goals sagas daily_tasks).include?session[:page_type] %>
  <header class="container is-fluid p-5">
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <div class="navbar-item">
          <span class="title barlow-condensed-bold has-text-primary">PowerUser</span>
        </div>
        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="poweruser_navbar">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="poweruser_navbar" class="navbar-menu">
        <div class="navbar-start">
          <%= link_to "Dashboard", dashboard_home_path, class: "navbar-item" %>
          <%= link_to "Sagas", sagas_path, class: "navbar-item" %>
          <%= link_to "Goals", smart_goals_path, class: "navbar-item" %>
          <%= link_to "Tasks", daily_tasks_path, class: "navbar-item" %>
          <%= link_to "Tracks", tracks_path, class: "navbar-item" %>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <span id="pomodoro_time" class="has-text-primary has-text-weight-bold"></span>
            <button id="start_pomo" onclick="startPomodoroTimer();" class="button is-primary">Start</button>
            <button id="stop_pomo" onclick="stopPomodoroTimer();" class="button is-danger">Stop</button>
          </div>
          <div class="navbar-item">
            <%= link_to "Log out", root_path, class: "button is-light", data: { turbo_prefetch: false } %>
          </div>
        </div>
      </div>
    </nav>
  </header>
<% else %>
  <header class="container is-fluid p-5">
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <div class="navbar-item">
          <span class="title barlow-condensed-bold">Welcome to <span class="has-text-primary">PowerUser</span></span>
        </div>
      </div>

      <div id="poweruser_navbar" class="navbar-menu">
        <div class="navbar-end">
          <div class="navbar-item">
            <% if session[:page_type] == "sign_up" %>
              <%= link_to "Log in", root_path, class: "button is-warning", data: { turbo_prefetch: false } %>
            <% else %>
              <%= link_to "Sign up", auth_sign_up_path, class: "button is-warning", data: { turbo_prefetch: false } %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  </header>
<% end %>
<%= javascript_include_tag "pomodoro" %>