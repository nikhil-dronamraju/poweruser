<% if session[:page_type] == "dashboard" %>
  <header class="container is-fluid p-5">
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <div class="navbar-item">
          <span class="title barlow-condensed-bold has-text-primary">PowerUser</span>
        </div>
        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="poweruser_navbar">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="poweruser_navbar" class="navbar-menu">
        <div class="navbar-start">
          <%= link_to "Dashboard", dashboard_home_path, class: "navbar-item" %>
          <%= link_to "Sagas", sagas_path, class: "navbar-item" %>
          <%= link_to "Goals", smart_goals_path, class: "navbar-item" %>
          <%= link_to "Tasks", daily_tasks_path, class: "navbar-item" %>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <span id="pomodoro_time" class="has-text-primary has-text-weight-bold">25:00</span>
            <button id="start_pomo" onclick="startPomodoroTimer();" class="button is-primary">Start</button>
            <button id="stop_pomo" onclick="stopPomodoroTimer();" class="button is-danger">Stop</button>
          </div>
          <div class="navbar-item">
            <%= link_to "Log out", root_path, class: "button is-light", data: { turbo_prefetch: false } %>
          </div>
        </div>
      </div>
    </nav>
  </header>
<% else %>
  <header class="p-4">
    <h1 class="barlow-condensed-bold is-size-2 has-text-primary">Welcome to PowerUser</h1>
  </header>
<% end %>