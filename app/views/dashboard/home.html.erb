<%= turbo_page_requires_reload %>
<section class="hero is-small">
  <div class="hero-body">
    <h1 class="is-size-2 barlow-condensed-bold">Welcome, <span class="has-text-primary"><%= @user.first_name %>!</span></h1>
    <span class="subtitle">This is your personal page. From here, you can monitor <span class="has-text-primary has-text-weight-bold">sagas</span>, <span class="has-text-danger has-text-weight-bold">goals</span>, and <span class="has-text-warning has-text-weight-bold">tasks.</span></span>
  </div>
</section>

<% if @saga.present? %>
  <div class="section">
    <div class="grid">
      <div class="cell">
        <div class="box h-100">
          <h2 class="is-size-4 barlow-condensed-semibold">Current saga: <span class="has-text-danger"><%= @saga.title %></span></h2>
          <div class="is-flex is-flex-direction-column block">
            <span>Start date: <span class="has-text-weight-bold"><%= format_date(@saga.start_date) %></span></span>
            <span>End date: <span class="has-text-weight-bold"><%= format_date(@saga.end_date) %></span></span>
            <span>Remaining days: <span class="has-text-weight-bold"><%= days_remaining(@saga.start_date, @saga.end_date) %></span></span>
          </div>
          <div class="buttons">
            <%= link_to "Open", dashboard_saga_path(@saga.id), class: "button is-primary" %>
          </div>
        </div>
      </div>

      <div class="cell">
        <div class="box h-100">
          <div class="is-flex is-flex-direction-column h-100">
            <h2 class="is-size-4 barlow-condensed-semibold">Goals:</h2>
              <% if @smart_goals.present? %>
                <% @smart_goals.each do |goal| %>
                  <div class="is-flex is-flex-direction-column">
                    <span class="barlow-condensed-medium"><%= goal.measurable_goal %></span>
                    <span class="barlow-condensed-medium">Start date: <%= format_date(goal.start_date) %></span>
                    <span class="barlow-condensed-medium">End date: <%= format_date(goal.end_date) %></span>
                    <span class="barlow-condensed-medium">Remaining days: <%= days_remaining(goal.start_date, goal.end_date) %></span>
                  </div>
                <% end %>
              <% else %>
                <p>No goals found. Please create one!</p>
                <div class="buttons mt-auto">
                  <%= link_to "Create", dashboard_new_goal_path, class: "button is-primary" %>
                </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <section class="hero is-danger">
    <div class="hero-body">
      <h3 class="barlow-condensed-semibold is-size-3 has-text-weight-bold">Whoa, there! You have no sagas.</h3>
      <span class="subtitle">The first step to setting goals and creating tasks is to create a saga.</span>
      <div class="mt-4">
        <%= link_to "Create a saga", new_saga_path, class: "button is-primary" %>
      </div>
    </div>
  </section>
<% end %>