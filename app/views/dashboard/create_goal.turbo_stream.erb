<% if @errors.present? %>
  <%= turbo_stream.replace("err_messages") do %>
    <%= render partial: "layouts/error_messages", locals: { messages: @errors } %>
  <% end %>
<% else %>
  <%= turbo_stream.remove "err_messages" %>
  <%= turbo_stream.replace("new_goal_frame") do %>
    <%= render partial: 'layouts/success_message', locals: { message: "Goal successfully created!" } %>
  <% end %>
<% end %>